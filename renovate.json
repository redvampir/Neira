{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,

  "timezone": "Europe/Moscow",
  "schedule": ["after 8pm every day"],

  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,

  "rebaseWhen": "conflicted",
  "lockFileMaintenance": { "enabled": true, "automerge": true },
  "vulnerabilityAlerts": { "enabled": false },

  "assignees": ["redvampir"],
  "reviewers": ["redvampir"],

  "platformAutomerge": true,
  "rangeStrategy": "auto",

  "packageRules": [
    {
      "description": "Глобально отключаем major",
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Автослияние patch для npm и cargo (после зелёных чеков) + дедупликация",
      "matchDatasources": ["npm", "cargo"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "postUpdateOptions": ["npmDedupe", "yarnDedupeHighest", "pnpmDedupe"]
    },
    {
      "description": "Группируем minor для npm",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor"],
      "groupName": "NPM minor (daily after 20:00 MSK)"
    },
    {
      "description": "Группируем minor для cargo",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor"],
      "groupName": "Rust minor (daily after 20:00 MSK)"
    }
  ],

  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps"
}
