                     "after 8pm every day"
                 ],
    "prHourlyLimit":  2,
    "prConcurrentLimit":  3,
    "rebaseWhen":  "behind-base-branch",
    "lockFileMaintenance":  {
                                "enabled":  true,
                                "automerge":  true
                            },
    "vulnerabilityAlerts":  {
                                "enabled":  false
                            },
    "assignees":  [
                      "redvampir"
                  ],
    "reviewers":  [
                      "redvampir"
                  ],
    "platformAutomerge":  true,
    "rangeStrategy":  "auto",
    "packageRules":  [
                         {
                             "description":  "Р“Р»РѕР±Р°Р»СЊРЅРѕ РѕС‚РєР»СЋС‡Р°РµРј major",
                             "matchUpdateTypes":  [
                                                      "major"
                                                  ],
