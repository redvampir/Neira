{
  "name": "neira",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "prepare": "husky",
    "backend:dev": "node scripts/backend-dev.mjs",
    "backend:test": "cargo test --manifest-path backend/Cargo.toml",
    "frontend:dev": "npm run dev --prefix frontend",
    "frontend:test": "npm test --prefix frontend",
    "check-examples": "node scripts/validate-examples.mjs",
    "check-examples:watch": "node scripts/validate-examples.mjs --watch",
    "generate-node-docs": "node scripts/generate-node-docs.mjs"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "ajv": "^8.17.1",
    "chokidar": "^3.6.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.41.0"
  },
  "overrides": {
    "p-limit": "^2.3.0",
    "yaml": "2.8.0",
    "yargs-parser": "^21.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/cargo/",
      "<rootDir>/rust/",
      "<rootDir>/binutils-gdb/",
      "<rootDir>/llvm-project/",
      "<rootDir>/nasm/"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.md": "prettier --write",
    "*.rs": "cargo fmt --",
    "examples/**/*.json": [
      "prettier --write",
      "npm run check-examples --",
      "npm run generate-node-docs && prettier --write docs/node-ids.md && git add docs/node-ids.md"
    ]
  }
}
