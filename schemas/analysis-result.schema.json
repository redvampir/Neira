{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AnalysisResult",
  "type": "object",
  "required": ["id", "result", "metadata"],
  "properties": {
    "id": {
      "type": "string"
    },
    "result": {
      "type": "string"
    },
    "links": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "credibility": {
      "type": "number"
    },
    "metadata": {
      "type": "object",
      "required": ["schema"],
      "properties": {
        "schema": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
