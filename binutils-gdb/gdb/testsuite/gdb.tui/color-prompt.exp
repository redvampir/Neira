# Check using a prompt with color in TUI.

require allow_tui_tests

tuiterm_env

Term::clean_restart 24 80

if {![Term::enter_tui]} {
    unsupported "TUI not supported"
    return
}

set tui 1
source $srcdir/$subdir/color-prompt.exp.tcl
